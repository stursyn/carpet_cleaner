  <category name="org.apache">
    <priority value="INFO"/>
  </category>

  <category name="TRACE">
    <priority value="TRACE"/>
  </category>

  <category name="SQL">
    <priority value="TRACE"/>
  </category>

  <category name="DIRECT_SQL">
    <priority value="TRACE"/>
  </category>

  <category name="SERVICE.MARKET_WATCH">
    <priority value="TRACE"/>
    <appender-ref ref="SERVICE.MARKET_WATCH"/>
  </category>
  <category name="SERVICE.WEB_ADMIN">
